{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": [
    "@taskylizard/biome-config"
  ],
  "files": {
    "ignore": [
      "testbeds/",
      "trash/"
    ]
  },
  "linter": {
    "rules": {
      "complexity": {
        "noExcessiveCognitiveComplexity": "off"
      },
      "style": {
        "noDefaultExport": "off",
        "useNamingConvention": "off"
      }
    }
  }
}
